@import "bootstrap-sprockets"
@import "bootstrap"

.container
  font-family: 'Lato',Helvetica,sans-serif

.center
  float: none
  margin-left: auto
  margin-right: auto

// move to seperate file?
.no-facility
  text-decoration: line-through
  color: #545454

/* Headers and titles */
.h-title
  text-align: center
  margin: 0 0 5px 0

  h4
    font-weight: bold
    font-size: 18px

.h-underline
  margin: 0 auto
  display: block
  width: 48px
  height: 3px
  border-bottom: 3px solid #333



/* Form styles */

.custom-form
  color: #393b40
  // width: 45%

  legend
    font-size: 14px
    font-weight: bold

.custom-input:focus
  border-color: #cccccc
  -webkit-box-shadow: none
  box-shadow: none

.custom-label
  margin-bottom: 5px
  font-size: 12px
  font-weight: normal

.custom-input, .custom-select
  border: 3px solid #393b40
  border-radius: 1px

.textarea-tall
  min-height: 100px
  height: auto


select.custom-select
  -webkit-appearance: none
  -moz-appearance: none
  appearance: none
  -webkit-border-radius: 1px
  background: #fff url <%= asset_path('down-arrow.png') %> no-repeat 99% center

input[type=checkbox]
  opacity: 0
  float:left

input[type=checkbox] + label
  margin: 0 0 0 36px
  position: relative
  cursor: pointer
  float: left
  font-weight: normal
  font-size: 12px

input[type=checkbox] + label ~ label
  margin: 0 0 0 60px

input[type=checkbox] + label::before
  content: ' '
  position: absolute
  left: -28px
  top: 0
  width: 14px
  height: 14px
  display: block
  background: white
  border: 1px solid #a9a9a9

input[type=checkbox] + label::after
  content: ' '
  position: absolute
  left: -28px
  top: 0
  width: 13px
  height: 13px
  display: block
  z-index: 1
  background: url<%= asset_path('tick.svg') %> no-repeat center center
  -ms-transition: all .2s ease
  -webkit-transition: all .2s ease
  transition: all .3s ease
  -ms-transform: scale(0)
  -webkit-transform: scale(0)
  transform: scale(0)
  opacity: 0


input[type=checkbox]:checked + label::after
  -ms-transform: scale(1)
  -webkit-transform: scale(1)
  transform: scale(1)
  opacity: 1
