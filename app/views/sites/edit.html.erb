<%= form_for @site do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :town %>
  <%= f.text_field :town %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :postcode %>
  <%= f.text_field :postcode %>
  <%= f.label :price %>
  <%= f.text_field :price %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.submit %>
<% end %>
