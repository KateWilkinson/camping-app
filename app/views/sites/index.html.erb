<h1 id='header'>Camping Emporium</h1>
<%= link_to "Vendor", '/vendors' %>

<%= form_tag(sites_path, :method => "get", class: "navbar-form", id: "search-form") do %>
  <div class="input-append">
  <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search by Town, County or Postcode" %>
  <button class='btn' type='submit'>Find Sites</button>
<% end %>

<% if @sites.any? %>
  <% @sites.each do |site| %>
    <h2> <%= link_to site.name, site_path(site) %> </h2>
    <h3> <%= site.town %></h3>
    <h3> Â£<%= site.price %></h3>
    <%= image_tag site.image.url(:thumb) %>
  <% end %>
<% end %>
