<nav class="navbar custom-navbar">
  <div class="container-fluid">
      <a class="navbar-brand" href="/">
          <img alt="Beyond camping" src="<%= image_url "Logo-darkgrey-sml.png" %>" class="bc-logo">
        </a>
      <ul class="navbar-right custom-nav-link">
        <li><%= link_to "List a site", '/vendors', class: "custom-nav-link" %></li>
      </ul>
  </div>
</nav>
<div class="container">
  <div class="row">
    <div>
      <%= form_for(sites_path, :method => "get", class: "navbar-form", id: "search-form") do %>
      <div class="input-append">
        <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search by Town, County or Postcode" %>
        <button id='search-button' type='submit'>Search</button>
        <div id='all-filters' style="display: none">
          <p></p>
          <h5>filter by setting<h5>
          <div>
            <%= check_box_tag :forest, true, false %>
            <%= label_tag(:forest, 'Forest') %>
          </div>
          <p></p>
          <div>
            <%= check_box_tag :mountain, true, false %>
            <%= label_tag(:mountain, 'Mountain') %>
          </div>
          <p></p>
          <div>
            <%= check_box_tag :lake, true, false %>
            <%= label_tag(:lake, 'Lake') %>
          </div>
          <p></p>
          <div>
            <%= check_box_tag :scenic, true, false %>
            <%= label_tag(:scenic, 'Scenic') %>
          </div>
          <p></p>
          <div>
            <%= check_box_tag :peaceful, true, false %>
            <%= label_tag(:peaceful, 'Peaceful') %>
          </div>
          <p></p>
          <div>
            <%= check_box_tag :remote_location, true, false %>
            <%= label_tag(:remote_location, 'Remote Location') %>
          </div>
          <p></p>
          <div>
            <%= check_box_tag :wildlife_haven, true, false %>
            <%= label_tag(:wildlife_haven, 'Wildlife Haven') %>
          </div>
          <p></p>
          <div>
            <%= check_box_tag :good_for_hiking, true, false %>
            <%= label_tag(:good_for_hiking, 'Good For Hiking') %>
          </div>
          <p></p>
          <div>
            <p>filter by max price per night</p>
            <%= text_field_tag :price, params[:price], type: 'range', min: '10', max: '200', step: '10', onchange: "updateTextInput(this.value);"%>
            <div>£<span id="textInput"><%= @price %></span></div>
          </div>
        </div>
      </div>
      <!-- <button id='search-button' type='submit'>Search</button> -->
    <% end %>
    <button id='show-filters'>Filters</button>
  </div>

  <% if @sites.any? %>
    <% @sites.each do |site| %>
    <div class="col-xs-12 col-sm-6 col-md-4">
      <div class="site-container-hp">
        <a href="<%= site_path(site) %>" ><%= image_tag site.image.url(:medium), class: "site-image" %>
        <span class="text-content">
          <h1 class="overlay-content1"><%= site.name %></h1>
          <hr class="short"/>
          <h2 class="overlay-content2"><%= site.summary %></h2>
          <hr class="short"/>
          <h3 class="overlay-content3">£<%= site.price %> per night</h3>
        </span>
        </a>
      </div>
        <span class="site-name"> <%= link_to site.name, site_path(site) %> </span>
        <span class="site-town"> <%= site.town %> / <%= site.county %></span>
    </div>
    <% end %>
  <% end %>
  </div>
</div>
