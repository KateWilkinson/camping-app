<div class="container">
  <div class="row">
    <div class="center">
      <div class="h-title">
        <h4>Add Campsite</h4>
        <!-- <span class="h-underline"></span> -->
      </div>

      <% if @site.errors.any? %>
        <section id='errors'>
          <ul>
            <% @site.errors.full_messages.each do |message|%>
              <li><%= message %></li>
            <% end %>
          </ul>
        </section>
      <% end %>

      <%= form_for @site, html: { multipart: true, class: 'custom-form' } do |f| %>
        <div class="form-group">
          <%= f.label :name, class: "custom-label" %>
          <%= f.text_field :name, autofocus: true, class: "form-control custom-input"  %>
        </div>
        <div class="form-group">
          <%= f.label "Address Line 1", class: "custom-label" %>
          <%= f.text_field :street, autofocus: true, class: "form-control custom-input" %>
        </div>
        <div class="form-group">
          <%= f.label "Town/City", class: "custom-label" %>
          <%= f.text_field :town, autofocus: true, class: "form-control custom-input"  %>
        </div>
        <div class="form-group">
          <%= f.label :county, class: "custom-label" %>
          <%= f.text_field :county, autofocus: true,
          class: "form-control custom-input"  %>
        </div>
        <div class="form-group">
          <%= f.label :postcode, class: "custom-label" %>
          <%= f.text_field :postcode, class: "form-control custom-input", autofocus: true %>
        </div>
        <div class="form-group">
          <%= f.label "Price", class: "custom-label" %>
          <%= f.text_field :price, autofocus: true, class: "form-control custom-input", placeholder: "per night" %>
        </div>
        <div class="form-group">
          <%= f.label "Accomodation type", class: "visuallyhidden" %>
          <%= f.select(:accommodation_type, options_for_select(['Cabin', 'Campervan', 'Canal boat', 'Pitch only', 'Pod', 'Shepherd hut', 'Tent', 'Treehouse', 'Yurt', 'Other']), {}, {class: "form-control custom-select"}) %>
        </div>
        <div class="form-group">
          <%= f.label :occupancy, class: "custom-label" %>
          <%= f.text_field :occupancy, autofocus: true, class: "form-control custom-input", placeholder: "Max. no. people" %>
        </div>
        <div class="form-group">
          <%= f.label "Full description", class: "custom-label" %>
          <%= f.text_field :description, autofocus: true, class: "form-control custom-input textarea-tall" %>
        </div>
        <div class="form-group">
          <%= f.label "Short description", class: "custom-label" %>
          <%= f.text_field :summary, autofocus: true, class: "form-control custom-input", placeholder: "Max. 50 words" %>
        </div>

        <div class="form-group">
          <%= f.label "Annual open dates:", class: "custom-label" %><br />
            <%= f.text_field :available_from, autofocus: true, class: "form-control custom-input", placeholder: "Month" %>
            <%= f.text_field :available_to, autofocus: true, class: "form-control custom-input", placeholder: "Month" %>
        </div>

        <div class="form-group">
          <p>Upload images</p>
          <!-- <%= f.label :image %> -->
          <%= f.file_field :image %>
          <!-- <%= f.label :image_2 %> -->
          <%= f.file_field :image_2 %>
        </div>

          <legend>Select the facilities available:</legend>
          <div class="form-group">
            <%= f.check_box(:shared_toilets) %>
            <%= f.label(:shared_toilets, "Shared toilets") %>
            <%= f.check_box(:shared_shower) %>
            <%= f.label(:shared_shower, "Private shower") %>
            <%= f.check_box(:private_shower) %>
            <%= f.label(:private_shower, "Private shower") %>
          </div>

          <div class="form-group">
            <%= f.check_box(:restaurant) %>
            <%= f.label(:restaurant, "On-site restaurant") %>
            <%= f.check_box(:shop) %>
            <%= f.label(:shop, "On-site shop") %>
            <%= f.check_box(:kitchen) %>
            <%= f.label(:kitchen, "Kitchen") %>
          </div>

          <div class="form-group">
            <%= f.check_box(:electricity) %>
            <%= f.label(:electricity, "Charging facilities") %>
            <%= f.check_box(:parking) %>
            <%= f.label(:parking, "On-site parking") %>
            <%= f.check_box(:handicap_access) %>
            <%= f.label(:handicap_access, "Handicap access") %>
          </div>

          <div class="form-group">
            <%= f.check_box(:wifi) %>
            <%= f.label(:wifi, "Wifi") %>
            <%= f.check_box(:eco) %>
            <%= f.label(:eco, "Recycling available") %>
            <%= f.check_box(:cycle_hire) %>
            <%= f.label(:cycle_hire, "Bike hire available") %>
          </div>

          <legend>Select the appropriate rules/policies:</legend>
          <div class="form-group">
            <%= f.check_box(:pets) %>
            <%= f.label(:pets, "Pets welcome") %>
            <%= f.check_box(:family) %>
            <%= f.label(:family, "Family-friendly") %>
            <%= f.check_box(:adults) %>
            <%= f.label(:adults, "Adults only") %>
          </div>

          <div class="form-group">
            <%= f.check_box(:campfire) %>
            <%= f.label(:campfire, "Campfires permitted") %>
            <%= f.check_box(:bbq) %>
            <%= f.label(:bbq, "BBQs permitted") %>
          </div>

          <legend>Select themes:</legend>
          <div class="form-group">
            <%= f.check_box(:budget) %>
            <%= f.label(:budget, "Budget") %>
            <%= f.check_box(:backpacker) %>
            <%= f.label(:backpacker, "Backpacker") %>
            <%= f.check_box(:forest) %>
            <%= f.label(:forest, "Forest") %>
          </div>

          <div class="form-group">
            <%= f.check_box(:lake) %>
            <%= f.label(:lake, "Lake") %>
            <%= f.check_box(:mountain) %>
            <%= f.label(:mountain, "Mountain") %>
            <%= f.check_box(:peaceful) %>
            <%= f.label(:peaceful, "Peaceful") %>
          </div>

          <div class="form-group">
            <%= f.check_box(:remote) %>
            <%= f.label(:remote, "Remote") %>
            <%= f.check_box(:scenic) %>
            <%= f.label(:scenic, "Scenic") %>
            <%= f.check_box(:walking) %>
            <%= f.label(:walking, "Good for walkers") %>
          </div>

          <div class="form-group">
            <%= f.check_box(:wildlife) %>
            <%= f.label(:wildlife, "Wildlife haven") %>
          </div>

          <legend>Select leisure facilities nearby:</legend>
          <div class="form-group">
            <%= f.check_box(:canoeing) %>
            <%= f.label(:canoeing, "Canoeing nearby") %>
            <%= f.check_box(:climbing) %>
            <%= f.label(:climbing, "Climbing nearby") %>
            <%= f.check_box(:horseriding) %>
            <%= f.label(:horseriding, "Horseriding nearby") %>
          </div>

          <div class="form-group">
            <%= f.check_box(:sailing) %>
            <%= f.label(:sailing, "Sailing nearby") %>
            <%= f.check_box(:watersports) %>
            <%= f.label(:watersports, "Watersports nearby") %>
            <%= f.check_box(:pub) %>
            <%= f.label(:pub, "Pub nearby") %>
          </div>


            <%= f.submit %>

      <% end %>

    </div>
  </div>
</div>
